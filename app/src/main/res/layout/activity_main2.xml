<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolBar">

        <ImageView
            android:id="@+id/userImageUpdate"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/male" />

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/userImageUpdate"
            android:layout_marginTop="@dimen/_15sdp">


            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayoutFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_7sdp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/textInputEditFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="First Name"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@color/cardview_dark_background" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayoutLastNane"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_7sdp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/textInputTextLastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:hint="Last Name"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@color/cardview_dark_background" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayoutPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:visibility="gone">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/textInputEditPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:capitalize="characters"
                        android:hint="Password"
                        android:imeOptions="actionNext"
                        android:inputType="numberPassword"
                        android:maxLength="4"
                        android:maxLines="1" />
                </android.support.design.widget.TextInputLayout>

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="male" />

                    <RadioButton
                        android:id="@+id/female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female" />
                </RadioGroup>

                <View
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:layout_width="match_parent"
                    android:layout_height=".8dp"
                    android:background="@color/color_background_tribe_food"
                    android:layout_marginLeft="@dimen/_8sdp"/>


                <TextView
                    android:id="@+id/textInputEditDOB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:hint="DOB"
                    android:inputType="number"
                    android:padding="@dimen/_5sdp"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:textColor="@color/text_color_light_black" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height=".8dp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:background="@color/color_background_tribe_food"
                    android:layout_marginLeft="@dimen/_8sdp"/>
                <!-- <android.support.design.widget.TextInputLayout
                     android:id="@+id/textInputLayoutDOB"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">

                     <android.support.design.widget.TextInputEditText
                         android:id="@+id/textInputEditDOB"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginLeft="@dimen/_7sdp"
                         android:hint="DOB"
                         android:inputType="number"
                         android:maxLength="10"
                         android:maxLines="1"
                         android:textColor="@color/cardview_dark_background" />
                 </android.support.design.widget.TextInputLayout>-->

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayoutEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/textInputEditEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:textColor="@color/cardview_dark_background" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayoutAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/textInputEditeAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:hint="Address"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:textColor="@color/cardview_dark_background" />
                </android.support.design.widget.TextInputLayout>


                <Spinner
                    android:id="@+id/spinnerCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:visibility="gone"

                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginLeft="@dimen/_9sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:background="@color/cardview_dark_background"

                    android:visibility="gone" />


                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/appCompatButtonRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_15sdp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorPrimary"
                    android:text="UpDate"
                    android:textColor="@color/text_color_white"
                    android:textStyle="bold" />


            </android.support.v7.widget.LinearLayoutCompat>

        </android.support.v4.widget.NestedScrollView>

    </RelativeLayout>

</RelativeLayout>
