<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_2sdp">

            <TableLayout
                android:id="@+id/table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TableRow>

                    <TextView
                        android:layout_column="1"
                        android:text="•"
                        android:textColor="@color/color_blue"
                        android:textStyle="bold"></TextView>
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_column="1"
                        android:text="•"
                        android:textColor="@color/color_blue"
                        android:textStyle="bold"></TextView>
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_column="1"
                        android:text="•"
                        android:textColor="@color/color_blue"
                        android:textStyle="bold"></TextView>
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_column="1"
                        android:text="•"
                        android:textColor="@color/color_blue"
                        android:textStyle="bold"></TextView>

                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_column="1"
                        android:text="•"
                        android:textColor="@color/color_blue"
                        android:textStyle="bold">

                    </TextView>
                </TableRow>

            </TableLayout>

            <LinearLayout
                android:id="@+id/pn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight=".7"
                    android:text="  Parking Name  :"
                    android:textColor="@color/text_color_light_black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/parkingName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:layout_weight="1.3"
                    android:text="jhvbjhxvhjvx"
                    android:textColor="@color/text_color_light_black"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pn"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_9sdp"
                    android:layout_marginRight="@dimen/_6sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/vehicleNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/qqq"
                        android:text="Parking Name"
                        android:textColor="@color/text_color_light_black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/booking"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/vehicleNo"
                            android:layout_weight=".3"
                            android:text="Date :"
                            android:textColor="@color/text_color_light_black"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/bookingDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/vehicleNo"
                            android:layout_weight="1.7"
                            android:text="Parking Name"
                            android:textColor="@color/text_color_light_black" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_9sdp"
                    android:layout_marginRight="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="vertical">

                    <!--android:background="@drawable/android_gradient_list"-->

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp">



                        <TextView
                            android:id="@+id/remaining"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"


                            android:text=""
                            android:textColor="@color/colorPrimary"

                            android:textStyle="bold" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/remaining">

                            <TextView
                                android:id="@+id/cancel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:gravity="center_horizontal"
                                android:text="  CANCELLED"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold"
                                android:visibility="gone" />
                        </RelativeLayout>
                    </RelativeLayout>


                </LinearLayout>


            </LinearLayout>

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true">

                <TableRow>

                    <TextView
                        android:layout_column="1"
                        android:text="•"
                        android:textColor="@color/color_blue"
                        android:textStyle="bold"></TextView>
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_column="1"
                        android:text="•"
                        android:textColor="@color/color_blue"
                        android:textStyle="bold"></TextView>
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_column="1"
                        android:text="•"
                        android:textColor="@color/color_blue"
                        android:textStyle="bold"></TextView>
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_column="1"
                        android:text="•"
                        android:textColor="@color/color_blue"
                        android:textStyle="bold"></TextView>

                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_column="1"
                        android:text="•"
                        android:textColor="@color/color_blue"
                        android:textStyle="bold">

                    </TextView>
                </TableRow>

            </TableLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>